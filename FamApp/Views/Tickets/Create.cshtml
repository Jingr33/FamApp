@model Ticket


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary">
                    <h2>Create new Ticket</h2>
                </div>
                <div card-body>
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Title</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter a Title" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" class="form-control"  placeholder="Enter a description" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Public" class="form-label">Public Ticket</label>
                            <input asp-for="Public" type="checkbox" class="form-check-input"/>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Priority" class="form-label">Priority Ticket</label>
                            <input asp-for="Priority" type="checkbox" class="form-check-input" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DeadLineDate" class="form-label">Dead Line</label>
                            <input asp-for="DeadLineDate" class="form-control" type="date" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-controller="Tickets" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
